---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { ViewTransitions } from "astro:transitions";

const posts = (await getCollection("blog")).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
const interests = [
	"Web",
	"Front-end",
	"Back-end",
	"Infra",
	"Business",
	"Finance",
	"MMA",
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<ViewTransitions />
	</head>
	<body class="bg-primary-3 text-primary-12 ">
		<div class="fixed -z-10 left-0 right-0 h-[500px] opacity-60 bg-gradient-to-b from-primary-5 to-transparent " />
		<main>
			<section class="flex gap-6 py-10">

				<img src="/lord-pachi.jpg" width="150" class="max-h-[200px]" alt="lord pachi pic" />
				<div class="flex flex-col gap-4">

			<h1 class="text-3xl font-black m-0">LordPachi</h1>

			<p class="m-0 text-sm">

				"Аниме на авe, мамка в канаве."
			</p>
			<p class="m-0">
				Building next-gen web.
			</p>
			<div class="flex items-center gap-4">

				<a href="https://instagram.com/_lordpachi" target="_blank">
					<span class="sr-only">Instagram</span>
		
